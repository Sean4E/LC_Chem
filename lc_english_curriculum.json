  "literaryTermsGlossary": [
    {
      "term": "Alliteration",
      "definition": "Repetition of consonant sounds at the beginning of words",
      "example": "Peter Piper picked a peck of pickled peppers"
    },
    {
      "term": "Metaphor",
      "definition": "Direct comparison between two unlike things without using 'like' or 'as'",
      "example": "Time is a thief"
    },
    {
      "term": "Simile",
      "definition": "Comparison using 'like' or 'as'",
      "example": "Her smile was like sunshine"
    },
    {
      "term": "Personification",
      "definition": "Giving human qualities to non-human things",
      "example": "The wind whispered through the trees"
    },
    {
      "term": "Imagery",
      "definition": "Descriptive language that appeals to the senses",
      "example": "Visual, auditory, tactile, olfactory, gustatory imagery"
    },
    {
      "term": "Symbolism",
      "definition": "Use of objects/colors/elements to represent abstract ideas",
      "example": "A dove symbolizing peace"
    },
    {
      "term": "Irony",
      "definition": "Contrast between expectation and reality",
      "types": ["Verbal irony", "Situational irony", "Dramatic irony"]
    },
    {
      "term": "Hyperbole",
      "definition": "Extreme exaggeration for effect",
      "example": "I've told you a million times"
    },
    {
      "term": "Oxymoron",
      "definition": "Two contradictory terms together",
      "example": "Deafening silence, bitter sweet"
    },
    {
      "term": "Assonance",
      "definition": "Repetition of vowel sounds",
      "example": "The rain in Spain falls mainly on the plain"
    },
    {
      "term": "Onomatopoeia",
      "definition": "Words that imitate sounds",
      "example": "Buzz, hiss, crash, bang"
    },
    {
      "term": "Enjambment",
      "definition": "Continuation of sentence beyond line break in poetry",
      "example": "Line runs on to next line without pause"
    },
    {
      "term": "Caesura",
      "definition": "A pause in the middle of a line of poetry",
      "example": "To be, or not to be"
    },
    {
      "term": "Tone",
      "definition": "Author's attitude toward subject",
      "examples": ["Serious", "Humorous", "Sarcastic", "Melancholic", "Optimistic"]
    },
    {
      "term": "Mood",
      "definition": "Emotional atmosphere created for the reader",
      "examples": ["Tense", "Peaceful", "Ominous", "Joyful", "Nostalgic"]
    },
    {
      "term": "Theme",
      "definition": "Central idea or message in a literary work",
      "example": "Love, death, power, identity, justice"
    },
    {
      "term": "Motif",
      "definition": "Recurring element that has symbolic significance",
      "example": "Blood in Macbeth, eyes in King Lear"
    },
    {
      "term": "Foreshadowing",
      "definition": "Hints about future events in the story",
      "example": "Ominous warnings, prophetic dreams"
    },
    {
      "term": "Flashback",
      "definition": "Scene set in a time earlier than the main story",
      "example": "Memory sequences, past events narrated"
    },
    {
      "term": "Soliloquy",
      "definition": "Character speaks thoughts aloud when alone on stage",
      "example": "Hamlet's 'To be or not to be'"
    },
    {
      "term": "Aside",
      "definition": "Brief remark by character to audience, unheard by other characters",
      "example": "Commentary on action or other characters"
    },
    {
      "term": "Dramatic Irony",
      "definition": "Audience knows something characters don't",
      "example": "In Romeo and Juliet, we know Juliet isn't dead"
    },
    {
      "term": "Protagonist",
      "definition": "Main character in a story",
      "example": "Hamlet, Elizabeth Bennet, Jay Gatsby"
    },
    {
      "term": "Antagonist",
      "definition": "Character or force opposing the protagonist",
      "example": "Claudius in Hamlet, Iago in Othello"
    },
    {
      "term": "Tragic Flaw (Hamartia)",
      "definition": "Character flaw leading to downfall",
      "example": "Macbeth's ambition, Othello's jealousy"
    },
    {
      "term": "Catharsis",
      "definition": "Emotional release audience feels at end of tragedy",
      "example": "Pity and fear purged through tragic events"
    },
    {
      "term": "Hubris",
      "definition": "Excessive pride leading to downfall",
      "example": "Macbeth's overconfidence"
    },
    {
      "term": "Juxtaposition",
      "definition": "Placing contrasting elements side by side",
      "example": "Rich vs poor, light vs dark"
    },
    {
      "term": "Anaphora",
      "definition": "Repetition of word/phrase at beginning of successive clauses",
      "example": "I have a dream... I have a dream..."
    },
    {
      "term": "Rhetorical Question",
      "definition": "Question asked for effect, not expecting answer",
      "example": "Is this a dagger which I see before me?"
    },
    {
      "term": "Allusion",
      "definition": "Reference to another work, event, or person",
      "example": "Biblical, mythological, historical references"
    },
    {
      "term": "Connotation",
      "definition": "Implied or associated meaning of a word",
      "example": "'Home' connotes warmth, safety, belonging"
    },
    {
      "term": "Denotation",
      "definition": "Literal dictionary meaning of a word",
      "example": "'Home' denotes a dwelling place"
    },
    {
      "term": "Euphemism",
      "definition": "Mild expression substituted for harsh one",
      "example": "'Passed away' for 'died'"
    },
    {
      "term": "Pathetic Fallacy",
      "definition": "Nature reflects human emotions",
      "example": "Storm during emotional turmoil"
    },
    {
      "term": "Diction",
      "definition": "Choice of words and phrases in writing",
      "example": "Formal, informal, colloquial, archaic"
    },
    {
      "term": "Syntax",
      "definition": "Arrangement of words and phrases to create sentences",
      "example": "Simple, complex, compound sentences"
    },
    {
      "term": "Register",
      "definition": "Level of formality in language",
      "example": "Formal, informal, colloquial, technical"
    },
    {
      "term": "Allegory",
      "definition": "Story with hidden meaning, often moral or political",
      "example": "Animal Farm as allegory for Russian Revolution"
    }
  ],

  "essayStructures": {
    "poetry": {
